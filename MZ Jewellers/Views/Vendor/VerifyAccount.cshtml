
@{
    ViewBag.Title = "VerifyAccount";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<div class="row">
    <!-- Content Column -->
    <div class="col-lg-12 mb-4">
        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Verify Account</h6>
            </div>
            <div className="card-body">
                <div className="row">
                    @using (Html.BeginForm("VerifyAccount", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-row pt-3">
                            <div class="form-group col-lg-4 col-12 px-3">
                                <label for="licNo">License No. </label>
                                <input type="text" class="form-control" id="licNo" name="licNo" maxlength="10" required>
                            </div>
                            <div class="form-group col-lg-4 col-12 pl-2">
                                <label for="licImg">License Image </label>
                                <input type="file" class="form-control" id="licImg" name="licImg" accept="image/*" required>
                            </div>
                            <div class="form-group col-md-12 px-3">
                                <input type="submit" value="Verify" class="btn btn-primary">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["AlertMessage"] != null)
{
    <script>alert('@TempData["AlertMessage"]');</script>
}
