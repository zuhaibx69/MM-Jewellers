
@{
    ViewBag.Title = "Vendor Dashboard";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

@model IEnumerable<MZ_Jewellers.Models.Quotation_Request>

<div class="container">

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="table-responsive bg-white">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Description</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">UoM</th>
                            <th scope="col">Order Deadline</th>
                            <th scope="col">Rate Per Unit</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in @ViewBag.QRlist)
                        {
                            <tr>
                                <th scope="row" style="color: #666666;">@ViewBag.Prodlist[@i.prd_id - 1].prd_name</th>
                                <td>Raw Material</td>
                                <td>@i.prd_quantity</td>
                                <td>Grams</td>
                                <td>@i.order_deadline.Date.ToString("d")</td>
                                <td style="width:20%">
                                    <div class="form-group" style=" display: flex; align-items: flex-end;">
                                        <input class="form-control" name="price_perunit" id="inputdefault" type="number">
                                        <label for="inputdefault" style="margin-left: 6px">PKR</label>
                                    </div>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary"><i class="fas fa-check"></i></button>
                                    <button type="button" class="btn btn-success"><i class="fas fa-times"></i></button>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
