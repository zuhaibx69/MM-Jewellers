
@{
    ViewBag.Title = "ViewResponse";
}


<div class="container">

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="table-responsive bg-white">
                <table class="table mb-0" id="tblstudentDetails">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Description</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">UoM</th>
                            <th scope="col">Order Deadline</th>
                            <th scope="col">Rate Per Unit</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (int i = 0; i < ViewBag.QRlist.Count; i++)
                            {

                                var specialItem = ((List<MZ_Jewellers.Models.Quotation_Response>)ViewBag.QRESlist).Find(item => item.req_id == ViewBag.QRlist[i].req_id);

                                if (specialItem == null)
                                {
                                    <tr id="trr">
                                        <th scope="row" style="color: #666666;">@ViewBag.Prodlist[ViewBag.QRlist[i].prd_id - 1].prd_name</th>
                                        <td>Raw Material</td>
                                        <td>@ViewBag.QRlist[i].prd_quantity</td>
                                        <td>Grams</td>
                                        <td>@ViewBag.QRlist[i].order_deadline.Date.ToString("d")</td>
                                        <td style="width:20%">
                                            <div class="form-group" style=" display: flex; align-items: flex-end;">
                                                @*<input class="form-control" name="price_perunit" type="number">*@
                                                <input type="number" class="form-control" name="price_perunit" id="price_perunit_@i" />
                                                <input type="hidden" id="hiddenreqid_@i" value="@ViewBag.QRlist[i].req_id" />
                                                <label for="inputdefault" style="margin-left: 6px">PKR</label>
                                            </div>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-primary" onclick="sendValue(@i)"><i class="fas fa-check"></i></button>
                                            <button type="button" class="btn btn-success" id="btnSend"><i class="fas fa-times"></i></button>
                                        </td>


                                    </tr>
                                }
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

