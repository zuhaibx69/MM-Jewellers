
@{
    ViewBag.Title = "CreateRFQ";
}

@model MZ_Jewellers.Models.Quotation_Request

<div class="row">
    <!-- Content Column -->
    <div class="col-lg-12 mb-4">
        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Request for Quotation</h6>
            </div>
            <div className="card-body">
                @using (Html.BeginForm("CreateRFQ", "Wholesaler", FormMethod.Post))
                {
                    <div class="card-body bg-gray-200 m-3 border border-dark">
                        <div class="col-lg-12">
                            <div class="row text-center border border-dark">
                                <div class="col border-right">
                                    Product
                                </div>
                                <div class="col border-right">
                                    Description
                                </div>
                                <div class="col border-right">
                                    Quantity
                                </div>
                                <div class="col border-right">
                                    Unit
                                </div>
                                <div class="col">
                                    Order Deadline
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 pt-2">
                            <div class="row pt-2">
                                <div class="col">
                                    <select id="inputState" class="form-control">
                                        <option selected>Gold</option>
                                    </select>
                                </div>
                                <div class="col pt-2">
                                    Raw Material
                                </div>
                                <div class="col">
                                    <input type="number" class="form-control" placeholder="1" min="1" name="qty" required>
                                </div>
                                <div class="col">
                                    <select id="inputState" class="form-control">
                                        <option selected>Grams</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <input type="date" class="form-control" name="Deadlinedate" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 mt-5 d-flex justify-content-between">
                            <input type="submit" value="Send Quotation" class="btn btn-primary">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
